<%= form_with(model: @project, local: true ,class:"shadow p-3 mb-3 bg-info rounded")  do |f| %>
  <div class="form-group">
    <%= f.label :name, class:"control-label col-xs-4" %>
    <div class="col-xs-8">
      <%= f.text_field :name, class:"form-control", required:"required"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class:"control-label col-xs-4" %>
    <div class="col-xs-8">
      <%= f.collection_select(:user_ids, User.all, :id, :name,
                              {prompt: "Make your selection from the list below (can't be empty)"},
                              { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>