<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:"shadow p-3 mb-3 bg-info rounded") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <%= f.label :email, class:"control-label col-xs-4" %>
    <div class="col-xs-8">
      <%= f.email_field :email, class:"form-control", required:"required", placeholder:"Enter email"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class:"control-label col-xs-4" %>
    <div class="col-xs-8">
      <%= f.text_field :name, class:"form-control", required:"required", placeholder:"Enter email"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class:"control-label col-xs-4" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class="col-xs-8">
      <%= f.password_field :password, class:"form-control", required:"required",autocomplete: "new-password", placeholder:"Enter password"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class:"control-label col-xs-4" %>
    <div class="col-xs-8">
      <%= f.password_field :password_confirmation, class:"form-control", required:"required", autocomplete: "new-password", placeholder:"Enter password again"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Sign up" , class: "btn btn-success"%>
  </div>
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<%= link_to "Back", :back %>
