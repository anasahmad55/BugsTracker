<div class="container m-5 p-5 justify-content-center" id="signUp">
  <div class="signup-form">
    <div class="col-xs-8 col-xs-offset-4">
      <h2>Create Bug</h2>
    </div>
    <%= form_with(model: @bug, local: true , class:"shadow p-3 mb-3 bg-info rounded") do |f| %>
      <%= render 'shared/error', obj:@bug%>
      <div class="form-group">
        <%= f.label :title, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.text_field :title, class:"form-control", required:"required", placeholder:"Enter title"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.text_area :description, class:"form-control", placeholder:"Enter description"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :deadline, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.datetime_local_field :deadline, class:"form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :screenshot, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.file_field :screenshot, class:"form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :bug_type, 'Type', class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <select name="bug[bug_type]" id="bug_bug_type" onChange="changeStatus(this.value);" class="form-control">
            <option value="" disabled selected>Select</option>
            <option value="feature">feature</option>
            <option value="bug">bug</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :status, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <select name="bug[status]" id="bug_status", class="form-control">
            <option value="" disabled selected>Select</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :project_id,'Project name', class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.collection_select(:project_id, current_user.projects, :id, :name,
                                  { prompt: "Make your selection from the list below (can't be empty)"},
                                  { multiple: false, class:"form-control"}) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
